	<bean id="messageHtmlClean" class="me.qyh.helper.htmlclean.CompositeHtmlContentHandler">
		<property name="handlers">
			<list>
				<bean class="me.qyh.helper.htmlclean.HtmlCleanFactoryBean">
					<property name="html">
						<value>
				<![CDATA[
					<br/>
					<a href=""></a>
				]]>
						</value>
					</property>
					<property name="specifiedValidators">
						<list>
							<bean class="me.qyh.helper.htmlclean.SpecifiedValidator">
								<constructor-arg index="0">
									<set>
										<value>href</value>
									</set>
								</constructor-arg>
								<property name="validator">
									<bean class="me.qyh.helper.htmlclean.SrcValidator" />
								</property>
							</bean>
						</list>
					</property>
				</bean>
				<ref bean="nofollowHtmlContentHandler" />
			</list>
		</property>
	</bean>

	<bean id="commentHtmlClean" class="me.qyh.helper.htmlclean.CompositeHtmlContentHandler">
		<property name="handlers">
			<list>
				<bean class="me.qyh.helper.htmlclean.HtmlCleanFactoryBean">
					<property name="html">
						<value>
				<![CDATA[
					<br/>
					<p></p>
					<a href=""></a>
					<img src="" class="img-responsive img-rounded img-circle img-thumbnail"/>
				]]>
						</value>
					</property>
					<property name="specifiedValidators">
						<list>
							<bean class="me.qyh.helper.htmlclean.SpecifiedValidator">
								<constructor-arg index="0">
