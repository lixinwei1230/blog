									</set>
								</constructor-arg>
								<property name="validator">
									<bean class="me.qyh.helper.htmlclean.SrcValidator" />
								</property>
							</bean>
						</list>
					</property>
				</bean>
				<ref bean="nofollowHtmlContentHandler" />
			</list>
		</property>
	</bean>


