<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.qyh.dao.CommentScopeDao">

	<resultMap type="CommentScope" id="CommentScopeDetail">
		<id column="id" property="id" />
		<result column="scopeId" property="scopeId" />
		<result column="scope" property="scope" />
		<association property="user" javaType="User">
			<id column="user_id" property="id" />
		</association>
	</resultMap>

	<select id="selectByScopeAndScopeId" resultMap="CommentScopeDetail">
		SELECT
		id,scope,scopeId,user_id FROM comment_scope
		WHERE scope = #{scope}
		AND scopeId = #{scopeId}
	</select>

	<select id="selectById" resultMap="CommentScopeDetail">
		SELECT
		id,scope,scopeId,user_id FROM comment_scope WHERE id = #{id}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT
		INTO
		comment_scope(scopeId,scope,user_id)
		VALUES(#{scopeId},#{scope},#{user.id})
	</insert>

	<delete id="deleteById">
		DELETE FROM comment_scope WHERE id = #{id}
	</delete>
</mapper>